{
    "name": "defenders-of-the-realm",
    "version": "3.0.0",
    "type": "module",
    "description": "Defenders of the Realm - A tower defense game built with React and Vite",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "test": "set NODE_OPTIONS=--max-old-space-size=8192 && vitest run",
        "test:watch": "set NODE_OPTIONS=--max-old-space-size=8192 && vitest",
        "test:e2e": "set NODE_OPTIONS=--max-old-space-size=8192 && playwright test",
        "test:e2e:agent": "set NODE_OPTIONS=--max-old-space-size=8192 && playwright test --reporter=./tests/agent-reporter.js",
        "test:e2e:changed": "set NODE_OPTIONS=--max-old-space-size=8192 && playwright test --only-changed",
        "test:e2e:ui": "set NODE_OPTIONS=--max-old-space-size=8192 && playwright test --ui",
        "lint": "eslint .",
        "docs": "node scripts/auto-doc.js",
        "prepare": "husky"
    },
    "dependencies": {
        "@capacitor/cli": "^6.1.2",
        "@capacitor/core": "^6.1.2",
        "@supabase/supabase-js": "^2.45.0",
        "@tauri-apps/api": "^2.0.0",
        "prop-types": "^15.8.1",
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    },
    "devDependencies": {
        "@google-cloud/vertexai": "^1.7.0",
        "@playwright/test": "^1.57.0",
        "@testing-library/jest-dom": "^6.5.0",
        "@testing-library/react": "^16.0.0",
        "@vitejs/plugin-react": "^5.1.2",
        "eslint": "^9.0.0",
        "eslint-plugin-react": "^7.35.0",
        "eslint-plugin-react-hooks": "^5.0.0",
        "husky": "^9.0.0",
        "jsdom": "^25.0.0",
        "lint-staged": "^15.2.0",
        "sharp": "^0.33.5",
        "vite": "^7.2.7",
        "vitest": "^4.0.15"
    },
    "lint-staged": {
        "*.{js,jsx}": [
            "eslint --fix"
        ]
    }
}
